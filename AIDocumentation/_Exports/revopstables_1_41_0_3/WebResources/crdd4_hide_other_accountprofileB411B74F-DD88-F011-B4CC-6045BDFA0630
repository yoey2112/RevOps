function toggleOtherFields(executionContext) {
    var formContext = executionContext.getFormContext();

    // Mapping of controlling field -> "other" field
    var fieldMap = [
        { control: "revops_sourceheardsherweb", other: "revops_sourceheardsherweb_other" },
        { control: "revops_verticalspecialization", other: "revops_verticalspecialization_other" },
        { control: "revops_expertisespecializations", other: "revops_expertisespecializations_other" }
    ];

    fieldMap.forEach(function (pair) {
        var selectedValues = formContext.getAttribute(pair.control).getValue(); 
        var showOther = false;

        if (selectedValues) {
            selectedValues.forEach(function (val) {
                var option = formContext.getAttribute(pair.control).getOptions()
                    .find(o => o.value === val);

                // Match exactly "Other, please specify"
if (option && option.text.trim().toLowerCase().includes("other")) {
    showOther = true;
                }
            });
        }

        // Only make it visible if needed (hidden by default in form designer)
        if (showOther) {
            formContext.getControl(pair.other).setVisible(true);
        }
    });
}